@page
@using S2.AspNet.Repetition.Entities

@model S2.AspNet.Repetition.Pages.IndexModel
@{
    ViewData["Title"] = "Forside";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Min første memegenerator</h1>
<div class="wrapper">
    <article>
        <form action="NewMeme" method="get">
            <div class="memeWrapper">
                @foreach (MemeImage memeImage in Model.MemeImages)
                {
                    <div class="memeSelector">
                        <img src="@memeImage.Url" alt="@memeImage.AltText" />
                        <input type="radio" name="imageSelected" value="@memeImage.Id" required/>
                    </div>
                }
            </div>
            <div class="memeSelector memeText">
                <input type="text" size="50" name="memeText" placeholder="Skriv din meme text" required/><br />
                <input type="text" size="50" name="memeTitle" placeholder="Skriv din memes titel her" required/><br />
                <div>
                    <select name="position">
                        <option value="top-left">Top left</option>
                        <option value="top-center">Top center</option>
                        <option value="top-right">Top right</option>
                        <option value="centered">centered</option>
                        <option value="bottom-left">Bottom left</option>
                        <option value="bottom-center">Bottom Center</option>
                        <option value="bottom-right">Bottom right</option>
                    </select>
                    <select name="color">
                        <option value="white">Hvid</option>
                        <option value="black">Sort</option>
                        <option value="orange">Orange</option>
                        <option value="green">Grøn</option>
                        <option value="red">Rød</option>
                        <option value="pink">Pink</option>
                        <option value="yellow">Gul</option>
                    </select>
                    <select name="fontsize">
                        <option value="small">Lille</option>
                        <option selected value="medium">Mellem</option>
                        <option value="big">Stor</option>
                    </select>
                </div>
                <input type="submit" value="Generer meme" />
            </div>
        </form>
    </article>
</div>